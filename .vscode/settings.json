{
  "search.exclude": {
    "**/.turbo": true,
    "**/dist": true,
    "**/node_modules": true,
    "**/pages/content-runtime": true,
    "**/pages/content-ui": true,
    "**/pages/content-devtools": true,
    "**/pages/devtools": true,
    "**/pages/devtools-panel": true,
    "**/pages/new-tab": true
  },
  "eslint.format.enable": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "git.enabled": true,
  "prettier.ignorePath": "**.yml",
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "todo-tree.general.tags": ["BUG", "HACK", "FIXME", "TODO", "[ ]", "[x]", "NOTE", "CHECKLIST", "WARNING"]
}
