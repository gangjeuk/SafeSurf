{
  "name": "chrome-extension",
  "version": "0.5.0",
  "description": "chrome extension - core settings",
  "type": "module",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "clean:node_modules": "pnpx rimraf node_modules",
    "clean:turbo": "rimraf .turbo",
    "clean": "pnpm clean:turbo && pnpm clean:node_modules",
    "ready": "tsc -b pre-build.tsconfig.json",
    "build": "NODE_OPTIONS=\"--max-old-space-size=10000\" vite build",
    "dev": "NODE_OPTIONS=\"--max-old-space-size=10000\" vite build --mode development",
    "test": "NODE_OPTIONS=\"--max-old-space-size=10000\" vitest run",
    "lint": "eslint .",
    "lint:fix": "pnpm lint --fix",
    "prettier": "prettier . --write --ignore-path ../.prettierignore",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@extension/env": "workspace:*",
    "@extension/i18n": "workspace:*",
    "@extension/shared": "workspace:*",
    "@extension/storage": "workspace:*",
    "@langchain/anthropic": "1.0.0",
    "@langchain/cerebras": "1.0.0",
    "@langchain/community": "^1.0.2",
    "@langchain/core": "1.0.4",
    "@langchain/deepseek": "1.0.0",
    "@langchain/google-genai": "1.0.0",
    "@langchain/groq": "1.0.0",
    "@langchain/langgraph": "^1.0.2",
    "@langchain/ollama": "1.0.1",
    "@langchain/openai": "1.1.0",
    "@langchain/xai": "^1.0.0",
    "@extension/db": "workspace:*",
    "jsonrepair": "3.13.1",
    "posthog-js": "^1.290.0",
    "puppeteer-core": "^24.29.1",
    "webextension-polyfill": "^0.12.0",
    "zod": "^4.1.12",
    "zod-to-json-schema": "^3.24.6"
  },
  "devDependencies": {
    "@extension/dev-utils": "workspace:*",
    "@extension/hmr": "workspace:*",
    "@extension/tsconfig": "workspace:*",
    "@extension/vite-config": "workspace:*",
    "@laynezh/vite-plugin-lib-assets": "^1.2.0",
    "@types/ws": "^8.18.1",
    "cross-env": "^7.0.3",
    "deepmerge": "^4.3.1",
    "magic-string": "^0.30.21",
    "ts-loader": "^9.5.4",
    "vitest": "2.1.9"
  }
}
